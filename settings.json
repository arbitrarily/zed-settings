// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Zedokai Darker (Filter Spectrum)",
  "base_keymap": "SublimeText",
  "auto_install_extensions": {
    "LOG": true,
    "GraphQL": true,
    "Python": true,
    "NGINX": true,
    "SCSS": true,
    "XML": true
  },
  "soft_wrap": "editor_width",
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "tab_size": 2,
  "tabs": {
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "project_panel": {
    "dock": "right",
    "default_width": 100,
    "indent_size": 12
  },
  "gutter": {
    "code_actions": false
  },
  "assistant": {
    "version": "1",
    "default_height": 450,
    "default_width": 500,
    "dock": "left"
  },
  "active_pane_magnification": 1.2,
  "inlay_hints": {
    "scroll_debounce_ms": 250
  },
  "scroll_sensitivity": 2,
  "ui_font_family": "Hack Nerd Font",
  "buffer_font_family": "Hack Nerd Font",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "indent_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "indent_size": 2
    },
    "JSON": {
      "indent_size": 2,
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },
  "language_overrides": {
    "Python": {
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    }
  },
  "vertical_scroll_margin": 6,
  "formatter": "prettier",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": ["*.json"],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "show_call_status_icon": false,
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  }
}
